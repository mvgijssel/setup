{
  "variables": {
    "source_path": "",
    "output_directory": "",
    "provisioners_dir": "",
    "output": "",
    "cloud_init_iso": ""
  },
  "builders": [
    {
      "type": "virtualbox-ovf",
      "format": "ovf",
      "output_directory": "packer_output",
      "source_path": "{{user `source_path`}}",
      "ssh_username": "vagrant",
      "ssh_password": "vagrant",
      "shutdown_command": "echo 'packer' | sudo -S shutdown -P now",
      "guest_additions_mode": "attach",
      "guest_additions_interface": "IDE",
      "vboxmanage": [
        ["modifyvm", "{{.Name}}", "--memory", "2048"],
        [
          "storageattach",
          "{{.Name}}",
          "--storagectl",
          "IDE Controller",
          "--port",
          "0",
          "--device",
          "0",
          "--type",
          "dvddrive",
          "--medium",
          "{{user `cloud_init_iso`}}"
        ]
      ],
      "vboxmanage_post": [
        [
          "storageattach",
          "{{.Name}}",
          "--storagectl",
          "IDE Controller",
          "--port",
          "0",
          "--device",
          "0",
          "--medium",
          "none"
        ]
      ],
      "headless": true,
      "disable_shutdown": false,
      "shutdown_timeout": "5m"
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "{{user `provisioners_dir`}}/install-virtualbox-guest-additions.sh"
    },
    {
      "type": "shell",
      "script": "{{user `provisioners_dir`}}/reset-cloud-init.sh"
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "{{user `output`}}"
    }
  ]
}
