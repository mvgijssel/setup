{
    "variables": {
        "hello": "friend"
    },
    "builders": [
        {
            "boot_command": [
              "<esc><wait>",
              "auto url=http://{{ .HTTPIP }}:{{.HTTPPort}}/preseed.cfg<return>"
            ],
            "boot_wait": "5s",
            "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
            "ssh_password": "vagrant",
            "ssh_username": "vagrant",
            "ssh_port": 22,
            "ssh_wait_timeout": "10000s",
            "iso_checksum_type": "sha256",
            "iso_checksum": "9ae83aa5a732151ef2dc84538d1d4ffd6374df47cc01681da6348f9ec5a45bd4",
            "iso_url": "https://cdimage.debian.org/cdimage/archive/9.11.0/amd64/iso-cd/debian-9.11.0-amd64-netinst.iso",
            "guest_os_type": "Debian_64",
            "keep_registered": true,
            "http_directory": "./http",
            "type": "virtualbox-iso",
            "memory": "4096"
        }
    ],
    "provisioners": [
        {
            "type": "shell",
            "execute_command": "echo 'vagrant' | {{.Vars}} sudo -S -E bash '{{.Path}}'",
            "script": "scripts/setup.sh"
        }
    ],
    "post-processors": [
        {
            "type": "vagrant",
            "output": "debian_stretch.box",
            "keep_input_artifact": true
        }
    ]
}
