{
  "variables": {
    "cpus": "1",
    "memory": "4096",
    "disk_size": "40000",
    "iso_url": "https://cdimage.debian.org/cdimage/archive/9.11.0/amd64/iso-cd/debian-9.11.0-amd64-netinst.iso",
    "iso_sha256": "9ae83aa5a732151ef2dc84538d1d4ffd6374df47cc01681da6348f9ec5a45bd4",
    "vm_name": "debian-9.11"
  },
  "builders": [
    {
      "type": "virtualbox-iso",
      "memory": "{{user `memory`}}",
      "cpus": "{{user `cpus`}}",
      "disk_size": "{{user `disk_size`}}",
      "vm_name": "{{user `vm_name`}}",
      "output_directory": "packer_output",
      "boot_command": [
        "<esc><wait>",
        "auto url=http://{{ .HTTPIP }}:{{.HTTPPort}}/preseed.cfg<return>"
      ],
      "boot_wait": "5s",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "ssh_password": "vagrant",
      "ssh_username": "vagrant",
      "ssh_port": 22,
      "ssh_wait_timeout": "10000s",
      "iso_checksum_type": "sha256",
      "iso_checksum": "{{user `iso_sha256`}}",
      "iso_url": "{{user `iso_url`}}",
      "guest_os_type": "Debian_64",
      "keep_registered": true,
      "http_directory": "./http"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbook.yml",
      "extra_arguments": ["-vvvv"]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "debian-9.11.box",
      "keep_input_artifact": true
    }
  ]
}
